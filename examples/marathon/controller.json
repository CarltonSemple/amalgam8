{
    "id": "a8-controller",
    "container": {
	"type": "DOCKER",
	"docker": {
	    "image": "amalgam8/a8-controller",
	    "network": "BRIDGE",
	    "portMappings": [
		{
		    "containerPort": 8080,
		    "hostPort": 31200,
		    "protocol" : "tcp"
		}
	    ]
	}
    },
    "env": {
	    "A8_LOG_LEVEL":"info",
		"A8_DATABASE_TYPE":"redis",
		"A8_DATABASE_HOST":"redis://__REPLACEME__:31400"
    },
    "instances": 1,
    "cpus": 0.1,
    "mem": 128
}
