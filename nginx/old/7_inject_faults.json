{
    "upstreams": {
        "helloworld_v1": {
            "servers": [
		{
		    "host" : "127.0.0.1",
		    "port" : 9091
		}
            ]
        },
        "helloworld_v2": {
            "servers": [
		{
		    "host" : "127.0.0.1",
		    "port" : 9093
		}
            ]
        },
        "endworld_v1": {
            "servers": [
		{
		    "host" : "127.0.0.1",
		    "port" : 9095
		}
            ]
        }
    },
    "services" : {
	"helloworld" : {
	    "default" : "v1",
	    "selectors" : "{v2={weight=0.5}}"
 	},
	"endworld" : {
	    "default" : "v1"
 	}
    },
    "faults" : [
	{
            "source":"source_v1",
            "destination":"helloworld_v2",
            "header": "X-Gremlin-Id",
            "pattern":"^test-.*",
            "delay": 3.0,
            "delay_probability":1.0,
            "abort_probability":0.0,
            "return_code":0
        },
	{
            "source":"source_v1",
            "destination":"helloworld_v2",
            "header": "X-Gremlin-Id",
            "pattern":"^endtest-.*",
            "delay": 0.0,
            "delay_probability":0.0,
            "abort_probability":1.0,
            "return_code":503
        },
	{
            "source":"source_v2",
            "destination":"endworld_v1",
            "header": "X-Gremlin-Id",
            "pattern":"endtest2-*",
            "delay": 0.0,
            "delay_probability":0.0,
            "abort_probability":1.0,
            "return_code":-1
        }
    ]
}
